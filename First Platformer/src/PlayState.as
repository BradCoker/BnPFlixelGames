			myCamera.update();
			
			FlxG.collide( level, player );
		}
		
		public function powerupGot( aPlayer:Player, aPowerup:Powerup ):void
		{
			aPowerup.kill();
			if ( aPowerup.type == 0 )
			{
				FlxG.log( "Got double jump" );
				aPlayer.hasDoubleJump = true;
			}
			else if ( aPowerup.type == 1 )
			{
				FlxG.log( "Got high jump" );
				aPlayer.jumpLen *= 2;
			}
		}
		
